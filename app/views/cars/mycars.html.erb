<% @cars.each do |car| %>

<div class="card" style="width: 30rem;">
  <img class="card-img-top" src="<%= car.image %>" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title"><%= car.model %></h5>
    <p class="card-text"><%=car.description %></p>
    <%= link_to "Show Car", car_path(car), class: "btn btn-primary" %>
    <% if policy(Car).create? %>
      <%= link_to "Delete Car", car_path(car), method: :delete, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<% end %>