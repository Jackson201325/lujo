<h2 style='text-align:center; margin-top: 20px'>Your selection of cars</h2>
<div class='carbig-container'>
  <% @cars.each do |car| %>
    <div class='car-card'>
      <%= link_to car_path(car) do %>
        <%= cl_image_tag car.image, width:400, height: 280,class:'img', crop: :thumb %>
      <% end %>
      <div class='details'>
          <h5> <%=car.brand%> <%=car.model%></h5>
          <h5> $<%=car.price_per_day%> <small>/day</small> </h5>
      </div>
      <div class="my-car-buttons">
        <%= link_to "Show Car", car_path(car), class: "btn-l btn-show shrink" %>
        <% if policy(Car).create? %>
          <%= link_to "Edit Car", edit_car_path(car), class: "btn-l btn-edit shrink" %>
          <%= link_to "Delete Car", car_path(car), method: :delete, class: "btn-l btn-delete shrink" %>
        <%end%>
      </div>
    </div>
  <%end%>
</div>
