<div class="container">
 <h2 style="text-align:center">Create a new car listing</h2>

  <%= simple_form_for(@car) do |f| %>
    <div class="form-inputs mt-4">
      <%= f.input :address, label: "Where is your car located?" %>
      <%= f.input :year, label: "From what year is your car?", collection: (1950..2019).to_a %>
      <%= f.input :brand, label: "What is the brand of your car?" %>
      <%= f.input :model, label: "What is the model of your car?" %>
      <%= f.input :odometer, label: "What is the current odometer? (kilometers)" %>
      <%= f.input :transmission, label: "What type of transmission does your car have?", as: :radio_buttons, collection: [['0', 'Manual'], ['1', 'Automatic']], label_method: :second, value_method: :first %>
      <%= f.input :license_plate, label: "What is the license plate of your car?" %>
      <%= f.input :description, label: "Give us a short description of your car" %>
      <%= f.input :image, label: "Upload an image of your car" %>
      <%= f.input :image_cache, as: :hidden %>
      <%= f.input :price_per_day, label: "For how much do you want to rent out your car ($ per day)" %>
    </div>
    <div class="form-actions mt-4 mb-4">
      <%= f.button :submit, class: "btn btn-success" %>
    </div>
  <% end %>
</div>
