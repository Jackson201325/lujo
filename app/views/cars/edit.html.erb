<div class="container">
 <h2>Edit your car listing</h2>

  <%= simple_form_for (@car) do |c| %>
    <div class="form-inputs mt-4">
      <%= c.input :address, label: "Where is your car located?" %>
      <%= c.input :year, label: "From what year is your car?", collection: (1950..2019).to_a %>
      <%= c.input :brand, label: "What is the brand of your car?" %>
      <%= c.input :model, label: "What is the model of your car?" %>
      <%= c.input :odometer, label: "What is the current odometer? (kilometers)" %>
      <%= c.input :transmission, label: "What type of transmission does your car have?", as: :radio_buttons, collection: ['Manual', 'Automatic'] %>
      <%= c.input :license_plate, label: "What is the license plate of your car?" %>
      <%= c.input :description, label: "Give us a short description of your car" %>
      <%= c.input :image, label: "Upload an image of your car" %>
      <%= c.input :price_per_day, label: "For how much do you want to rent out your car ($ per day)" %>
    </div>
    <div class="form-actions mt-4 mb-4">
      <%= c.button :submit, class: "btn btn-success" %>
    </div>
  <% end %>
</div>
